{
  "name": "@jsweb/truetype",
  "version": "2.1.1",
  "description": "Simple JS module to check types more concisely",
  "main": "dist/main.js",
  "esnext": "dist/esnext.js",
  "module": "dist/esnext.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "dist": "run-s dist:*",
    "dist:clean": "rimraf dist",
    "dist:test": "npm run test:unit",
    "dist:lint": "tslint -p . -c tslint.json",
    "dist:types": "tsc --emitDeclarationOnly",
    "dist:build": "rollup -c",
    "dist:minify": "minify dist/main.js -d dist",
    "dist:main": "concat src/author.ts dist/main.js -o dist/main.js",
    "dist:esnext": "concat src/author.ts dist/esnext.js -o dist/esnext.js",
    "test": "run-s test:*",
    "test:clean": "rimraf mocha*",
    "test:unit": "mocha src/**/*.test.ts --compilers ts:ts-node/register",
    "test:report": "npm run test:unit -- --reporter mochawesome --reporter-options reportTitle=@jsweb/truetype",
    "prepare": "npm run dist"
  },
  "author": "Alex Bruno <git.alexbr@outlook.com>",
  "license": "MIT",
  "keywords": [
    "javascript",
    "type",
    "test",
    "check"
  ],
  "homepage": "https://truetype.jsweb.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweb/truetype.git"
  },
  "bugs": {
    "url": "https://github.com/jsweb/truetype/issues"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "babel-minify": "^0.4.3",
    "concat": "^1.0.3",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.3",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.2",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}

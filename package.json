{
  "name": "@jsweb/truetype",
  "version": "3.0.7",
  "description": "Simple JS module to check types more consistently",
  "main": "dist/umd.js",
  "esnext": "dist/module.js",
  "module": "dist/module.mjs",
  "types": "dist/module.d.ts",
  "author": "Alex Bruno <git.alexbr@outlook.com>",
  "license": "MIT",
  "keywords": [
    "javascript",
    "type",
    "test",
    "check"
  ],
  "homepage": "https://truetype.jsweb.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweb/truetype.git"
  },
  "bugs": {
    "url": "https://github.com/jsweb/truetype/issues"
  },
  "scripts": {
    "dist": "run-s dist:*",
    "dist:clean": "shx rm -rf dist",
    "dist:test": "npm t",
    "dist:types": "tsc --removeComments --emitDeclarationOnly",
    "dist:build": "rollup -c",
    "dist:copy": "shx cp ./dist/module.mjs ./dist/module.js",
    "test": "run-s test:*",
    "test:lint": "tslint -p . -c tslint.json",
    "test:clean": "shx rm -rf mocha*",
    "test:unit": "mocha src/**/*.test.ts --require ts-node/register --reporter mochawesome --reporter-options reportTitle=@jsweb/truetype",
    "prepare": "npm run dist"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.3",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.65.2",
    "rollup-plugin-esmin": "^0.1.3",
    "rollup-plugin-typescript": "^1.0.0",
    "shx": "^0.3.2",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
